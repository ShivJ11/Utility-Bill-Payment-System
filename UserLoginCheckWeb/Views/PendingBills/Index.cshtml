@{
    if (Model.Count > 0)
    {
        <h3>Pending Bills</h3>
        <form asp-action="PayBills" asp-controller="ControllerName" method="post">
            <table class="table table-striped table-bordered table-hover">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>
                            Account Number
                        </th>
                        <th>
                            Zip
                        </th>
                        <th>
                            Due Date
                        </th>
                        <th>
                            Due Amount
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.AccountStatus == false)
                        {
                            <tr>
                                <td>
                                    @item.AccountNumber
                                </td>
                                <td>
                                    @item.Zip
                                </td>
                                <td>
                                    @item.DueDate
                                </td>
                                <td class="due-amount">
                                    @item.DueAmount
                                </td>
                                <td>
                                    @item.AccountType
                                </td>
                                <td>
                                    @if (item.AccountStatus == false)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </form>
    }
    else
    {
        <h1>No Pending Bills</h1>

    }
}

