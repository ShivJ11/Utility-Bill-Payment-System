@model CustomerPortal.Models.UserDetails
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome!</h1>
                                </div>
                                <form class="user needs-validation" asp-action="Check" asp-controller="Login" novalidate>
                                    <div class="form-group">
                                        <input type="email" asp-for="uEmail" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Enter Email Address..." required>
                                        <div class="invalid-feedback">
                                            Email can't be empty
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="uPassword" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Password" required>
                                        <div class="invalid-feedback">
                                            Password can't be empty
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">
                                                Remember
                                                Me
                                            </label>
                                        </div>
                                    </div>*@
                                    <div class="form-group text-danger text-center">
                                        @ViewData["Message"]
                                    </div>
                                    <div class="form-group text-center">
                                        <input type="submit" value="Login" class="btn btn-primary btn-user btn-block" />
                                    </div>
                                    @*<a href="index.html" class="btn btn-primary btn-user btn-block">
                                        Login
                                    </a>*@
                                    @*<a href="index.html" class="btn btn-google btn-user btn-block">
                                        <i class="fab fa-google fa-fw"></i> Login with Google
                                    </a>
                                    <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                        <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                    </a>*@
                                </form>
                                
                                <div class="text-center">
                                    <a class="small" asp-action="Index" asp-controller="Register">Create an Account!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/FormValidations.js"></script>
